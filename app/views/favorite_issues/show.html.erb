<div class="page-header">
  <h3>Favorite Issue #<%= @favorite_issue.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Issue</dt>
      <dd>
        <% if @favorite_issue.issue.present? %>
          <a href="/issues/<%= @favorite_issue.issue_id %>">
            <%= @favorite_issue.issue.conservative_take %>
          </a>
        <% end %>
      </dd>

      <dt>User</dt>
      <dd>
        <% if @favorite_issue.user.present? %>
          <a href="/users/<%= @favorite_issue.user_id %>">
            <%= @favorite_issue.user.email %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/favorite_issues" class="btn btn-primary">
        Back
      </a>
      <a href="/favorite_issues/<%= @favorite_issue.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_favorite_issue/<%= @favorite_issue.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
