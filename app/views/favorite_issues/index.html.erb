<div class="page-header">
  <h1>
    Favorite issues
    <a href="/favorite_issues/new" class="btn btn-lg btn-success">New Favorite issue</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Issue</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @favorite_issues.each do |favorite_issue| %>
      <tr>
        <td>
          <% if favorite_issue.issue.present? %>
            <a href="/issues/<%= favorite_issue.issue.id %>">
              <%= favorite_issue.issue.conservative_take %>
            </a>
          <% end %>
        </td>
        <td>
          <% if favorite_issue.user.present? %>
            <a href="/users/<%= favorite_issue.user.id %>">
              <%= favorite_issue.user.email %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/favorite_issues/<%= favorite_issue.id %>" class="btn btn-primary">Show</a>
          <a href="/favorite_issues/<%= favorite_issue.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_favorite_issue/<%= favorite_issue.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @favorite_issues, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
