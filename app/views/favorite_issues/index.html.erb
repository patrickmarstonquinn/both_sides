<div class="page-header">
  <h1>
    Favorite issues
    <a href="/favorite_issues/new" class="btn btn-lg btn-success">New Favorite issue</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Issue</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @favorite_issues.each do |favorite_issue| %>
      <tr>
        <td><%= favorite_issue.issue_id %></td>
        <td><%= favorite_issue.user_id %></td>
        <td>
          <a href="/favorite_issues/<%= favorite_issue.id %>" class="btn btn-primary">Show</a>
          <a href="/favorite_issues/<%= favorite_issue.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_favorite_issue/<%= favorite_issue.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
